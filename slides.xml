<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fieldset name="slides" label="Slide Details">
		<field name="background_image" type="media" directory="" label="Select background image"/>
		<field name="title" type="text" default="" label="Title" description="" filter="raw" />
		<field name="sub_title" type="text" default="" label="Subtitle" description="" filter="raw"/>
		<field name="button_text" type="text" default="" label="Button Text" description="" filter="raw"/>
		<field name="text_align" type="list" default="" required="true" label="Text align" description="">
  			<option value="">Please Select</option>
			<option value="0">Top left</option>
			<option value="1">Top center</option>
			<option value="2">Top right</option>
			<option value="3">Center</option>
			<option value="4">Center left</option>
			<option value="5">Center right</option>
			<option value="6">Bottom left</option>
			<option value="7">Bottom center</option>
			<option value="8">Bottom right</option>
		</field> 
		<field name="link_type" type="list" default="" required="true" label="Select link type" description="">
  			<option value="">Please Select</option>
  			<option value="0">Menu Item</option>
  			<option value="1">URL</option>
		</field>
		<field name="menuitem" showon="link_type:0" type="menuitem" default="45" label="Select a menu item" description="Select a menu item" />
		<field name="link" showon="link_type:1" type="url" default="" label="Enter a URL" description="" size="10" />
	</fieldset>
</form>